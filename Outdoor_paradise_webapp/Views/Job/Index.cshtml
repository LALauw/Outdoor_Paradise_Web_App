@model IEnumerable<Outdoor_paradise_webapp.Models.Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HRMLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h2>List of Jobs</h2>

        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    </div>
    <div class="table-responsive  table-striped table-bordered card-body">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>
                    @Html.ActionLink("Code", "Index", new { sortOrder = ViewBag.CodeSortParm })
                    </th>
                    <th>
                    @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm })       
                    </th>
                    <th>
                    @Html.ActionLink("Minimum Salary", "Index", new { sortOrder = ViewBag.MinSSortParm })
                    </th>
                    <th>
                    @Html.ActionLink("Maximum Salary", "Index", new { sortOrder = ViewBag.MaxSSortParm })
                    </th>
                    <th>
                     Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                         @Html.DisplayFor(modelItem => item.Min_salary)
                        </td>
                        <td>
                         @Html.DisplayFor(modelItem => item.Max_salary)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" style="margin-bottom:5px;">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" style="margin-bottom:5px;">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" style="margin-bottom:5px;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>