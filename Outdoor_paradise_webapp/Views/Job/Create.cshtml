@model Outdoor_paradise_webapp.Models.Job

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_HRMLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Create</h2>
    </div>
    <div class="card-body">
        <h4>Job</h4>

        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card" style="width: 18rem;margin-bottom:10px;">
                <div class="card-body">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" required title="This is required!" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="card" style="width: 18rem;margin-bottom:10px;">
                <div class="card-body">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" required title="This is required!" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="card" style="width: 18rem;margin-bottom:10px;">
                <div class="card-body">
                    <label asp-for="Min_salary" class="control-label"></label>
                    <input asp-for="Min_salary" class="form-control" required title="This is required!" />
                    <span asp-validation-for="Min_salary" class="text-danger"></span>
                </div>
            </div>
            <div class="card" style="width: 18rem;margin-bottom:10px;">
                <div class="card-body">

                    <label asp-for="Max_salary" class="control-label"></label>
                    <input asp-for="Max_salary" class="form-control" required title="This is required!" />
                    <span asp-validation-for="Max_salary" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>




    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
