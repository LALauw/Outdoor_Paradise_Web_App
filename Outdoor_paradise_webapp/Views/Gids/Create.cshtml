@model Outdoor_paradise_webapp.Models.Gids

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Create Gids</h2>
    </div>
    <div class="card-body">
        <h5 class="card-title">New Gids</h5>

        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>

        <hr />
        <form asp-action="Create">
            <input type="submit" value="Create" class="btn btn-primary" style="margin-bottom:10px;" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card" style="width: 18rem;margin-bottom:10px;">
                <div class="card-body">
                    <label class="control-label">Naam</label>
                    <input asp-for="Naam" class="form-control" required="required" title="Choose 1"/>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}