@model Outdoor_paradise_webapp.Models.Gids

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Delete</h2>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <h5 class="card-title">Gids: @Model.Naam</h5>
        <div class="card" style="width: 18rem;margin-bottom:10px;">
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(model => model.Naam)</h6>
                <p class="card-text">@Html.DisplayFor(model => model.Naam)</p>
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </form>
    </div>
</div>
