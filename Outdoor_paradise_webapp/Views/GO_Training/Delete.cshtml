@model Outdoor_paradise_webapp.Models.GO_TrainingDetailsModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_HRMLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Delete</h2>
    </div>
    <div>
        <div class="card-body">
            <h2>Are you sure you want to delete this?</h2>
            <h5 class="card-title">Training: @Model.CourseName from @Model.employeeFullName </h5>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
            </form>
            <hr />
            <div class="rowoverride" style="justify-content:space-between ;">
                <div class="coloverride" style="float: left;">
                    <div class="card" style="width: 18rem;margin-bottom:10px;">
                        <div class="card-header">
                            <h4>Info</h4>
                        </div>
                    </div>
                    <div class="card" style="width: 18rem;margin-bottom:10px;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(model => model.Course)</h6>
                            <p class="card-text">@Html.DisplayFor(model => model.CourseName)</p>
                        </div>
                    </div>
                    <div class="card" style="width: 18rem;margin-bottom:10px;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(model => model.Employee)</h6>
                            <p class="card-text">@Html.DisplayFor(model => model.employeeFullName)</p>
                        </div>
                    </div>
                    <div class="card" style="width: 18rem;margin-bottom:10px;">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(model => model.Year_taken)</h6>
                            <p class="card-text">@Html.DisplayFor(model => model.Year_taken)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

