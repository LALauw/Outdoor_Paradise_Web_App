@model Outdoor_paradise_webapp.Models.BonusEditModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_HRMLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h2>Details</h2>
    </div>
		<div class="card-body">
			<h5 class="card-title">Bonus for: @Model.EmployeeName</h5>
			<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
			<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
			<a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
			<hr />
			<div class="card" style="width: 18rem;margin-bottom:10px;">
				<div class="card-header">
					<h4>Info</h4>
				</div>
			</div>
			<div class="card" style="width: 18rem;margin-bottom:10px;">
				<div class="card-body">
					<h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(model => model.Employee)</h6>
					<p class="card-text">@Html.DisplayFor(model => model.EmployeeName)</p>
				</div>
			</div>
			<div class="card" style="width: 18rem;margin-bottom:10px;">
				<div class="card-body">
					<h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(model => model.Date)</h6>
					<p class="card-text">@Html.DisplayFor(model => model.Date)</p>
				</div>
			</div>
			<div class="card" style="width: 18rem;margin-bottom:10px;">
				<div class="card-body">
					<h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(model => model.Amount)</h6>
					<p class="card-text">@Html.DisplayFor(model => model.Amount)</p>
				</div>
			</div>
		</div>
</div>