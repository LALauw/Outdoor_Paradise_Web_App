@model Outdoor_paradise_webapp.Models.BonusEditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_HRMLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Edit</h2>
    </div>
    <div class="card-body">
        <h5 class="card-title">Bonus: @Model.EmployeeName</h5>
        <h6 class="card-title">Note dates can not be changed. It will always be the current date of change.</h6>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        <hr />
        <form asp-action="Edit">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="card" style="width: 18rem;margin-bottom:10px;">
                <div class="card-body">
                    <label class="control-label">Employee</label>
                    <select asp-for="Employee" class="chosen form-control" asp-items="@(new SelectList(Model.Employees, "Id", ("FullName")))" required="required" title="Choose 1">
                        <option></option>
                    </select>
                </div>
            </div>
            <div class="card" style="width: 18rem;margin-bottom:10px;">
                <div class="card-body">
                    <label asp-for="Amount" class="control-label">Amount</label>
                    <input asp-for="Amount" class="form-control" required="required" title="fill in an amount" maxlength="10" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
