@model Reis_uitvoeringModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Delete</h2>
    </div>
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this?</h5>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
            <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </form>
        <hr />

                <div class="card" style="width: 18rem;margin-bottom:10px;">
                    <div class="card-header">
                        <h4>Uitvoering Info</h4>
                    </div>
                </div>
                <div class="card" style="width: 18rem;margin-bottom:10px;">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Tour</h6>
                        <p class="card-text">@Html.DisplayFor(model => model.ReisObj.Name)</p>
                    </div>
                </div>
                <div class="card" style="width: 18rem;margin-bottom:10px;">
									<div class="card-body">
										<h6 class="card-subtitle mb-2 text-muted">Start Date</h6>
										<p class="card-text">@Model.Begin_datum.ToString("yyyy/MM/dd")</p>
									</div>
                </div>
                <div class="card" style="width: 18rem;margin-bottom:10px;">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Ending Date</h6>
                        <p class="card-text">@Model.Eind_datum.ToString("yyyy/MM/dd")</p>
                    </div>
                </div>
                <div class="card" style="width: 18rem;margin-bottom:10px;">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Price / Person</h6>
                        <p class="card-text">@Html.DisplayFor(model => model.Prijs_per_deelnemer)</p>
                    </div>
                </div>
            </div>
            
   
</div>



