@model List<DepartmentDetailsModel>

@{
    ViewData["Title"] = "Index";
    Layout = "../Shared/_HRMLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Departments</h2>
    </div>
    <div class="table-responsive table-striped table-bordered card-body">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Manager
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manager) - @Html.DisplayFor(modelItem => item.EmployeeModel.FullName)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>