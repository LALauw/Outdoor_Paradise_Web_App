@model List<ExcursieIndexModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-header">
		<h2>Excursies</h2>

		<p>
			<a asp-action="Create" class="btn btn-primary">Create New</a>
		</p>
	</div>
	<div class="table-responsive table-striped table-bordered card-body">
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th>
						Name
					</th>
					<th>
						Datum
					</th>
					<th>
						Prijs
					</th>
					<th>
						Description
					</th>
					<th>
						Gids
					</th>
					<th>
						Options
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model) {
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Datum)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Prijs)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.GidsNaam)
						</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
							<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
							<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>